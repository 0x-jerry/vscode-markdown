{
    "name": "markdown-all-in-one",
    "displayName": "Markdown All in One",
    "description": "All you need to write Markdown (keyboard shortcuts, table of contents, auto preview and more)",
    "icon": "images/Markdown-mark.png",
    "version": "0.7.4",
    "publisher": "yzhang",
    "engines": {
        "vscode": "^1.6.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "markdown"
    ],
    "preview": true,
    "bugs": {
        "url": "https://github.com/neilsustc/vscode-markdown/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/neilsustc/vscode-markdown"
    },
    "license": "MIT",
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown.extension.toc.create",
                "title": "Markdown: Create Table of Contents"
            },
            {
                "command": "markdown.extension.toc.update",
                "title": "Markdown: Update Table of Contents"
            },
            {
                "command": "markdown.extension.print",
                "title": "Markdown: Print to PDF"
            }
        ],
        "keybindings": [
            {
                "command": "markdown.extension.editing.toggleBold",
                "key": "ctrl+b",
                "mac": "cmd+b",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "command": "markdown.extension.editing.toggleItalic",
                "key": "ctrl+i",
                "mac": "cmd+i",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "command": "markdown.extension.editing.toggleCodeSpan",
                "key": "ctrl+`",
                "mac": "cmd+`",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "command": "markdown.extension.editing.toggleHeadingUp",
                "key": "ctrl+shift+]",
                "mac": "cmd+shift+]",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "command": "markdown.extension.editing.toggleHeadingDown",
                "key": "ctrl+shift+[",
                "mac": "cmd+shift+[",
                "when": "editorTextFocus && editorLangId == markdown"
            },
            {
                "command": "markdown.extension.onEnterKey",
                "key": "enter",
                "when": "editorTextFocus && editorLangId == markdown && !suggestWidgetVisible"
            },
            {
                "command": "markdown.extension.onCtrlEnterKey",
                "key": "ctrl+enter",
                "mac": "cmd+enter",
                "when": "editorTextFocus && editorLangId == markdown && !suggestWidgetVisible"
            },
            {
                "command": "markdown.extension.onTabKey",
                "key": "tab",
                "when": "editorTextFocus && editorLangId == markdown && !suggestWidgetVisible"
            },
            {
                "command": "markdown.extension.onBackspaceKey",
                "key": "backspace",
                "when": "editorTextFocus && !editorHasSelection && editorLangId == markdown && !suggestWidgetVisible"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Markdown All in One",
            "properties": {
                "markdown.extension.toc.depth": {
                    "type": "number",
                    "default": 6,
                    "description": "Depth control [1-6]"
                },
                "markdown.extension.toc.orderedList": {
                    "type": "boolean",
                    "default": false,
                    "description": "Use ordered list (1. ..., 2. ...)"
                },
                "markdown.extension.toc.plaintext": {
                    "type": "boolean",
                    "default": false,
                    "description": "Just plain text"
                },
                "markdown.extension.toc.updateOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto update on save"
                },
                "markdown.extension.preview.autoShowPreviewToSide": {
                    "type": "boolean",
                    "default": false,
                    "description": "Auto show preview to side"
                },
                "markdown.extension.orderedList.marker": {
                    "type": "string",
                    "default": "one",
                    "description": "Start a list item always with '1.' or in increasing numerical order",
                    "enum": [
                        "one",
                        "ordered"
                    ]
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {},
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}